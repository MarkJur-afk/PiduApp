@model PiduApp.Models.Pyha

@{
    ViewBag.Title = "Lisa Püha";
}

<div class="text-center mb-4">
    <h2 style="color: #8b7d6b;">🎆 Lisa Uus Püha 🎆</h2>
</div>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="card shadow">
        <div class="card-body">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            
            <div class="form-group mb-3">
                @Html.LabelFor(model => model.Nimetus, "Püha nimetus:", htmlAttributes: new { @class = "form-label" })
                @Html.EditorFor(model => model.Nimetus, new { htmlAttributes = new { @class = "form-control", @placeholder = "Sisesta püha nimetus..." } })
                @Html.ValidationMessageFor(model => model.Nimetus, "", new { @class = "text-danger" })
            </div>

            <div class="form-group mb-3">
                @Html.LabelFor(model => model.Kuupaev, "Kuupäev:", htmlAttributes: new { @class = "form-label" })
                @Html.EditorFor(model => model.Kuupaev, new { htmlAttributes = new { @class = "form-control", @type = "date" } })
                @Html.ValidationMessageFor(model => model.Kuupaev, "", new { @class = "text-danger" })
            </div>

            <div class="text-center">
                <input type="submit" value="Lisa Püha" class="btn btn-success btn-lg me-2" />
                @Html.ActionLink("Tagasi", "Index", null, new { @class = "btn btn-secondary btn-lg" })
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
