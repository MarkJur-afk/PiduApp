@model IEnumerable<PiduApp.Models.Pyha>

@{
    ViewBag.Title = "Pühad";
}

<div class="text-center mb-4">
    <h1 style="color: #8b7d6b; margin-bottom: 30px;">🎉 Meie Pühad 🎉</h1>
    <p class="lead">Vaata kõiki meie imelisi pidusid!</p>
</div>

<div class="mb-4">
    @Html.ActionLink("Lisa Uus Püha", "Create", null, new { @class = "btn btn-success btn-lg" })
</div>

<div class="row">
    @foreach (var item in Model) {
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title text-primary">@Html.DisplayFor(modelItem => item.Nimetus)</h5>
                    <p class="card-text">
                        <i class="fas fa-calendar"></i> @Html.DisplayFor(modelItem => item.Kuupaev)
                    </p>
                </div>
                <div class="card-footer bg-transparent">
                    @Html.ActionLink("Vaata", "Details", new { id=item.Id }, new { @class = "btn btn-primary btn-sm" })
                    @Html.ActionLink("Muuda", "Edit", new { id=item.Id }, new { @class = "btn btn-warning btn-sm" })
                    @Html.ActionLink("Kustuta", "Delete", new { id=item.Id }, new { @class = "btn btn-danger btn-sm" })
                </div>
            </div>
        </div>
    }
