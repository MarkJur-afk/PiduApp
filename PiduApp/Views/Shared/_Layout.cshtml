<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Minu ASP.NET Rakendus</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body style="background-color: #f5f3f0; min-height: 100vh;">
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark">
        <div class="container">
            @Html.ActionLink("Pidu", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li>@Html.ActionLink("Avaleht", "Index", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Täida ankeet", "Ankeet", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    
                    @if (User.IsInRole("Admin"))
                    {
                        <li>@Html.ActionLink("Pühade haldus", "Index", "Pyhads", new { area = "" }, new { @class = "nav-link" })</li>
                        <li>@Html.ActionLink("Külaliste nimekiri", "Index", "Guests", new { area = "" }, new { @class = "nav-link" })</li>
                    }
                    
                    <li>@Html.ActionLink("Meist", "About", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Kontakt", "Contact", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                </ul>
                 @Html.Partial("_LoginPartial")
            </div>
        </div>
    </nav>
    <div class="container body-content" style="background: #faf8f5; border-radius: 10px; padding: 30px; margin-top: 20px; box-shadow: 0 4px 6px rgba(139,125,107,0.15);">
        @RenderBody()
        <hr />
        <footer class="bg-dark text-light py-4 mt-5">
            <div class="container">
                <div class="row">
                    <div class="col-md-6">
                        <h5>Pidu</h5>
                        <p>Parim koht pidude korraldamiseks</p>
                    </div>
                    <div class="col-md-3">
                        <h6>Lingid</h6>
                        <ul class="list-unstyled">
                            <li>@Html.ActionLink("Avaleht", "Index", "Home", new { area = "" }, new { @class = "text-light" })</li>
                            <li>@Html.ActionLink("Meist", "About", "Home", new { area = "" }, new { @class = "text-light" })</li>
                            <li>@Html.ActionLink("Kontakt", "Contact", "Home", new { area = "" }, new { @class = "text-light" })</li>
                        </ul>
                    </div>
                    <div class="col-md-3">
                        <h6>Kontakt</h6>
                        <p>Email: info@pidu.ee<br>Tel: +372 123 4567</p>
                    </div>
                </div>
                <hr class="bg-light">
                <div class="text-center">
                    <p>&copy; @DateTime.Now.Year - Pidu. Kõik õigused kaitstud.</p>
                </div>
            </div>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
